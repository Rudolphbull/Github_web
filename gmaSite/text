<form method="post" action="/contact">



    <!-- Update Your server.js with the /contact Route
    Add this route in your Express server (below your app.get routes):
         -->
 
 app.post("/contact", (req, res) => {
    const { name, email, message } = req.body;
  
    const transporter = nodemailer.createTransport({
      service: "gmail", // or use your preferred email service
      auth: {
        user: process.env.EMAIL,       // e.g. rudolpbull@gmail.com
        pass: process.env.EMAIL_PASS   // use an App Password if Gmail
      }
    });
  
    const mailOptions = {
      from: email,
      to: process.env.EMAIL,
      subject: `New message from ${name}`,
      text: `
        Name: ${name}
        Email: ${email}
        Message: ${message}
      `
    };
  
    transporter.sendMail(mailOptions, function(error, info){
      if (error) {
        console.log(error);
        res.send("There was an error sending your message. Please try again.");
      } else {
        console.log("Email sent: " + info.response);
        res.redirect("/thankyou.html"); // ðŸ‘ˆ Redirect after successful send
      }
    });
  });
  